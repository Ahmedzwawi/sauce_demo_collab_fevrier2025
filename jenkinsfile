pipeline {
    agent {
        docker {
            image "cypress/browsers"
            args '--entrypoint=""'  
        }
    }
parameters {
        string(name: 'TAG', defaultValue: '@regression', description: 'Tag de test')
    }

    stages {
        stage('Vérifier la version de Cypress') {
            steps {
                sh "npm --version"
                sh "npm ci"
            }
        }

        stage('Exécuter les tests API avec Cypress') {
            steps {
                // sh 'npx cypress run'
                sh 'npx cypress run --env grepTags='${params.TAG}''

            }
        }
    }
post{
        always {
            archiveArtifacts artifacts: 'cypress/reports/**/*.*', followSymlinks: false
            // junit 'build/reports/**/*.xml'

        }
    }
}

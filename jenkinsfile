pipeline {
    agent {
        docker {
            image "cypress/browsers"
            args '--entrypoint=""'  
        }
    }


    stages {
        stage('Vérifier la version de Cypress') {
            steps {
                sh "npm --version"
                sh "npm ci"
            }
        }

        stage('Exécuter les tests API avec Cypress') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
post{
        always {
            archiveArtifacts artifacts: 'cypress/reports//.', followSymlinks: false
        }
    }
}
